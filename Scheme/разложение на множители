;x^2-y^2=(x-y)(x+y)
;x^3-y^3=(x-y)(x^2+xy+y^2)
;x^3+y^3=(x+y)(x^2-xy+y^2)
(define-syntax factorize
  (syntax-rules (quote expt + -)
    ((_(quote (- (expt x 2) (expt y 2))))
     '(* (- x y) (+ x y)))
    ((_(quote (- (expt x 3) (expt y 3))))
     '(* (- x y) (+ (expt x 2) (* x y) (expt y 2))))
    ((_(quote (+ (expt x 3) (expt y 3))))
     '(* (+ x y) (+ (expt x 2) (- (* x y)) (expt y 2))))))
